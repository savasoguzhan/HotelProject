@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateSerive";
    Layout = "~/Views/AdminLayout/_AdminLAyout.cshtml";
}

<h1>UpdateSerive</h1>

<form method="post">
    <input type="hidden" asp-for="ServiceId" />
    <label>Service Icon:</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label>Service Title:</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Description:</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary"> Update Service</button>

</form>